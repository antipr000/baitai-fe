# .env.example

# API Configuration
NEXT_PUBLIC_API_URL=

# Firebase Client Configuration (Public - used in browser)
# Copy this file to .env.local and fill in your actual Firebase credentials
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_auth_domain_here
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id_here
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_storage_bucket_here
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id_here
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id_here

# Firebase Admin SDK (Server-side only - KEEP SECRET!)
# Get these from Firebase Console > Project Settings > Service Accounts > Generate New Private Key
FIREBASE_ADMIN_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour\nPrivate\nKey\nHere\n-----END PRIVATE KEY-----\n"

# Auth Cookie Configuration
# Generate random 32+ character strings for these keys
AUTH_COOKIE_NAME=AuthToken
AUTH_COOKIE_SIGNATURE_KEY_CURRENT=generate-a-random-secret-key-at-least-32-characters-long
AUTH_COOKIE_SIGNATURE_KEY_PREVIOUS=generate-another-random-secret-key-for-key-rotation
USE_SECURE_COOKIES=false  #Set to true in production (HTTPS). Controls the 'secure' flag in auth cookies
